@model IEnumerable<KRAM1.Models.Picture>
@{
    ViewBag.Title = "Home Page";
}

@if (TempData["Success"] != null)
{
    <div class="success">
        <p>@TempData["Success"].ToString()</p>
    </div>
}
<p>__</p><p>__</p>
<div id="searchResults" name="searchInput">
    <p>asd</p>

    <p>Här borde sökresultaten hamna.</p>
</div>
<div class="grid">
    @foreach (var img in Model.OrderByDescending(x => x.Id))
    {

        <div class="grid-sizer"></div>
        <div class="grid-item">
            <input type="hidden" value="@img.Id" />
            <a href='@Url.Action("FullImage", "Image", new { fileName = img.Id})'>
                <img src="@Url.Content(img.PicUrl)" alt="Picture coming soon" />
            </a>
        </div>
    }
</div>
