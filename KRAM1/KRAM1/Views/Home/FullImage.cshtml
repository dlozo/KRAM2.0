@model KRAM1.Models.Picture

@{
    ViewBag.Title = "FullImage";
}


<div class="container-narrow">
    <div class="row">
        <div class="col-sm-6 col-xs-6 box">
            <div class="fullImage">
                <img src="@Url.Content(ViewBag.x)" alt="Picture coming soon"  class="img-responsive"  />
               @if(ViewBag.Hashtag!=null)
                   {
                <h3 class="hashtag"><span>Hashtag: #@ViewBag.Hashtag.Name</span></h3>
                   } 

                <p></p>
            </div>

        </div>

    </div>
</div>